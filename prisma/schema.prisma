generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String @id @default(cuid())
  name         String
  phone_number String
  state        String
  city         String
  orders Order[]
}

model Order {
  id String @id @default(cuid())
  user_id String 
  user User @relation(fields:[user_id] , references:[id]) 
  total_price Int 
}

model product {
  id String @id @default(cuid())

}

model order_items {
  id String @id @default(cuid())
}